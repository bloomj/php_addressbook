<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://logging.apache.org/log4php/">
	<appender name="default" class="LoggerAppenderDailyFile">
		<layout class="LoggerLayoutPattern">
			<param name="conversionPattern" value="%date{m-d-Y H:i:s,u} [%process] %logger %-5level %file: %msg - In %class.%method (line: %line)%n" />
		</layout>
		<param name="file" value="/var/log/apache2/php_addressbook-%s.log" />
		<param name="datePattern" value="Y-m-d" />
	</appender>
	<appender name="echo" class="LoggerAppenderEcho">
		<layout class="LoggerLayoutPattern">
			<param name="conversionPattern" value="%date{m-d-Y H:i:s,u} [%process] %logger %-5level %file: %msg - In %class.%method (line: %line)%n" />
		</layout>
		<param name="htmlLineBreaks" value="false" />
	</appender>
	<root>
		<level value="trace" />
		<appender_ref ref="default" />
	</root>
	<logger name="unittest">
		<level value="trace" />
		<appender_ref ref="echo" />
	</logger>
</configuration>